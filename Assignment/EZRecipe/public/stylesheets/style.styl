body
  padding 0
  margin 0
  font 14px "Merriweather", Helvetica, Arial, sans-serif
  .home-page
    color #ffffff
    margin 0
    width 100%
    height 100%
    background-image url('../images/cooking-img.jpg')
    background-repeat no-repeat
    background-size cover
    .header
      display flex
      padding 0px 50px
      .left
        flex 1
        .title
          font-size 24px
      .right
        flex 1
        text-align right
        align-items center
        ul
          li
            width 70px
            display inline-block
            text-align center
            a
              font-size 20px
              text-decoration none
              font-weight 600px
              color #000
    .main
      min-height 500px
      padding 0px 50px
      h1
        margin-bottom 15px
        max-width 100px
        font-size 64px
        text-align left
        line-height 1.1
        font-weight 700
      div
        width 250px
        text-align center
        font-size 16px
    .footer
      width 100%
      position absolute
      margin 5px auto
      text-align center
      color #000
      font-size 60px
